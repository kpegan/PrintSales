<%# PERMISSION INDEX VIEW %>

<% content_for(:page_nav) do %>
	<li><%= link_to 'Create new permission', new_permission_path %></li>
<% end %>

<table id="main_table" cellspacing="0">
  <tr>
	<th width="20px"></th>
	<th width="20px"></th>
	<th width="20px"></th>
    <th>Name</th>
	<th>Unpaid print jobs</th>
  </tr>

<% @permissions.each do |permission| %>
  <tr class="<%= cycle("odd", "even") %>">
  	<td class="button"><%= link_to image_tag("show.png", :border=>0), permission %></td>
	<td class="button"><%= link_to image_tag("edit.png", :border=>0), edit_permission_path(permission) %></td>
	<td class="button"><%= link_to image_tag("delete.png", :border=>0), permission, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%=h permission.name %></td>
    <td><%=h permission.description %></td>
  </tr>
<% end %>
</table>

