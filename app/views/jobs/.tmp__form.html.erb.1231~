<% form_for [@user, @job], :id => 'job_from' do |f| %>

  <%= f.error_messages %>
  
  <%= f.hidden_field :staff_id, :value => current_user.id %>
  <%= f.hidden_field :paper_price, :value => current_paper_price %>
  <%= f.hidden_field :ink_price, :value => current_ink_price %> 
  
  <p><%= f.text_field :file, :size => 25, :value => "Filename" %></p>
  
<table id="print_job" cellspacing="0">
	<tr>
		<th>Paper</th>
		<td><%= f.text_field :paper_width, :size => 4, :value => "Width" %>&nbsp;&nbsp;x&nbsp;&nbsp;<%= f.text_field :paper_height, :size => 4, :value => "Height" %></td>
		<td><%#=h "%5.2f" % @job.paper_area %> sq. ft. @ <%=h number_to_currency current_paper_price %></td>
		<td id="paper_total" class="number"><%#=h number_to_currency @job.paper_price  * @job.paper_area %>0</td>
	</tr>	
	<tr>
		<th>Image</th>
		<td><%= f.text_field :image_width, :size => 4, :value => "Width" %>&nbsp;&nbsp;x&nbsp;&nbsp;<%= f.text_field :image_height, :size => 4, :value => "Height" %></td>
		<td><%#=h "%5.2f" % @job.image_area %> sq. ft. @ <%=h number_to_currency current_ink_price%></td>
		<td id="image_total" class="number"><%#=h number_to_currency @job.ink_price  * @job.image_area %>0</td>
	</tr>
	<tr>	
		<td></td>
		<td></td>
		<th>Print</th>
		<td id="print_cost" class="number"><%#=h number_to_currency @job.print_cost %>0</td>
	</tr>
	<tr>
		<td></td>
		<td></td>
		<th></th>
		<td class="number">x &nbsp;<%= f.text_field :quantity, :size => 5, :value => "Quantity" %></td>
	</tr>
	<tr>
		<td></td>
		<td></td>
		<th>Total</th>
		<td class="number"><strong><%#=h number_to_currency @job.total %>0</strong></td>
	</tr>
	<tr>
		<td></td>
		<td></td>
		<th>Discount</th>
		<td class="number"><%#=h number_to_percentage @job.discount %>0</td>
	</tr>
	<tr>
		<td></td>
		<td></td>
		<th>Final</th>
		<td class="number"><strong><%#=h number_to_currency @job.discounted_total %>0</strong></td>
	</tr>
</table>
<%= f.submit 'Submit' %>
<% end %>