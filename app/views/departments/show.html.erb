<%# DEPARTMENT SHOW VIEW %>

<% content_for(:page_nav) do %>
	<li><%= link_to 'Rename', edit_department_path(@department) %></li>
	<li><%= link_to 'View all departments', departments_path %></li>
<% end %>

<% if @department.users.count > 0 %>
<table id="main_table" cellspacing="0">
  <caption>Departmental members</caption>
  <tr>
	<th width="20px"></th>
	<th width="20px"></th>
	<th width="20px"></th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Position</th>
    <th>Graduation</th>
    <th>Role</th>
  </tr>

<% @department.users.each do |user| %>
  <tr class="<%= cycle("even", "odd") %>">
  	<td class="button"><%= link_to image_tag("show.png", :border=>0), user %></td>
	<td class="button"><%= link_to image_tag("edit.png", :border=>0), edit_user_path(user) %></td>
	<td class="button"><%= link_to image_tag("delete.png", :border=>0), user, :confirm => 'Are you sure?', :method => :delete %></td>
	<td><%= link_to user.full_name, user %></td>
    <td><%=h user.email %></td>
    <td><%=h user.phone_formatted %></td>
    <td><%=h user.position %></td>
    <td><%=h user.grad_date %></td>
    <td><%=h user.role.name %></td>
  </tr>
<% end %>
</table>

<% else %>

<p>This department has no users.</p>

<% end %>

