<% content_for(:page_class), "centered" %>

<% content_for(:page_nav) do %>
	<li><%= link_to 'View all departments', departments_path %></li>
<% end %>

<% form_for(@department) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>